# name=typefilter-dlog

.include "V.dom"
.include "C.dom"
.include "H.dom"
.include "T.dom"

.bddvarorder V0_T0_H0_C0

VT(v:V,t:T) input
HTFilter(h:H,t:T) input
CH(o:C,h:H) input

typeFilter(v:V,o:C) output
ciTypeFilter(v:V,h:H) output 

typeFilter(v,o) :- VT(v,t), HTFilter(h,t), CH(o,h).
