#!/bin/bash

#TODO: handle symlinks in a platform-independent way
STAMP_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/.. && pwd )"
BASE_DIR="$( pwd )"

APP_DIR="$1"
shift
ARGS="$@"

for f in `ls "$APP_DIR"/*.apk`
do
    ant -f "$STAMP_DIR/ant/stamp.xml" -Dbasedir="$BASE_DIR" permission -Dapp="$f" "$ARGS"
done